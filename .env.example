# Aubit-Poly Environment Configuration
# Copy this to .env and fill in your values
#
# NOTE: API keys are ONLY needed for placing trades.
# Market data (prices, order books) is FREE and requires NO authentication.
# You can run the arbitrage detector without any API keys!

# =============================================================================
# PREDICTION MARKETS (Optional - only for trading)
# =============================================================================

# Polymarket API - Only needed for placing trades
# Get credentials from: https://docs.polymarket.com
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=
POLYMARKET_WALLET_ADDRESS=

# Kalshi API - Only needed for placing trades
# Get credentials from: https://kalshi.com/developers
KALSHI_API_KEY=
KALSHI_API_SECRET=

# =============================================================================
# CRYPTO EXCHANGES (Optional - only for trading)
# =============================================================================

# Binance API - Only needed for placing trades
# Public market data (prices, options) requires NO key
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Coinbase API (optional)
COINBASE_API_KEY=
COINBASE_API_SECRET=
COINBASE_API_PASSPHRASE=

# =============================================================================
# ALERTS & NOTIFICATIONS
# =============================================================================

# Discord Webhook (optional)
# Create webhook in Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=

# Telegram Bot (optional)
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================================================
# DATABASE
# =============================================================================

# SQLite (default) - just a file path
DATABASE_URL=sqlite+aiosqlite:///./data/aubit.db

# PostgreSQL (production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/aubit

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Minimum profit thresholds (as decimal, e.g., 0.01 = 1%)
MIN_INTERNAL_ARB_PROFIT=0.005
MIN_CROSS_PLATFORM_ARB_PROFIT=0.02
MIN_HEDGING_ARB_PROFIT=0.03

# Scan interval in seconds
SCAN_INTERVAL=30

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=10
